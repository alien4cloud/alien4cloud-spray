[Unit]
Description=Yorc server
After=consul.service

[Service]
User={{ yorc_user }}
Restart=on-failure
WorkingDirectory={{ yorc_install_dir }}
ExecStart=/bin/bash -c 'sleep 30 && export YORC_LOG={{ yorc_debug }} && ./yorc server >{{ yorc_log_dir }}/yorc.log 2>&1'
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target

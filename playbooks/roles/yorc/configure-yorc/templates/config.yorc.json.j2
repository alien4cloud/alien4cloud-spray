{
  "cluster_id": "MYC",
  "resources_prefix": "YORC_",
  "workers_number": 20,
  "working_directory": "{{ yorc_working_dir }}",
  "server_id": "{{ inventory_hostname }}",
  "locations_file_path": "{{ yorc_install_dir }}/config.locations.json",
  "ansible": {
    "use_openssh": true,
    "connection_retries": 3,
    "hosted_operations": {
      "unsandboxed_operations_allowed": true
    },
    "remote_tmp": "{{ yorc_remote_ansible_tmp }}",
    "local_tmp": "{{ yorc_local_ansible_tmp }}"
  },
  "terraform": {
    "plugins_dir": "/var/terraform/plugins"
  }
}

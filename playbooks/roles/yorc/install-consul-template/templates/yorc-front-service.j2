[Unit]
Description=Yorc consul template for nginx configuration daemon
After=consul.service

[Service]
User={{ consul_template_user }}
Restart=on-failure
WorkingDirectory=/var/lib/yorc-front
ExecStart=/var/lib/yorc-front/consul-template -config /etc/yorc-front/consul_template.conf
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGKILL

[Install]
WantedBy=multi-user.target
